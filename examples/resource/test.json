{
    "configurations": {
        "release": {
            "libs": [
                "stdc++",
                "jpeg"
            ],
            "output_name": "runme",
            "default": true,
            "target": "executable",
            "compiler": "gcc",
            "linker": "gcc",
            "archiver": "ar",
            "output_path": "./bin/release/",
            "standard": "c++14",
            "optimisation": "2",
            "debug_level": "0",
            "warnings_as_errors": true,
            "enable_all_warnings": true,
            "fatal_errors": true,
            "include": [
                "/usr/include/",
                "./"
            ],
            "define": [
                "NDEBUG",
                "RELEASE_BUILD"
            ]
        }
    },
    "source_files": [
        "./main.cpp",
        "./framebuffer.cpp"
    ],
    "resource_files": [
        "./data/moon.jpg",
        "./data/rose.jpg"
    ]
}